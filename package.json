{
  "name": "flowveda-investor-portal",
  "version": "1.0.0",
  "private": true,
  "description": "FlowVeda Investor Portal - Multi-role SaaS platform",
  "scripts": {
    "dev": "pnpm --filter './apps/*' dev",
    "dev:api": "pnpm --filter './apps/api' dev",
    "dev:web": "pnpm --filter './apps/web' dev",
    "build": "pnpm --filter './apps/*' build",
    "start": "cd apps/api && node dist/server.js",
    "lint": "pnpm --filter './apps/*' lint",
    "type-check": "pnpm --filter './packages/shared' type-check && pnpm --filter './apps/*' type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}


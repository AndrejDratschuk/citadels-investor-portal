{
  "name": "altsui-investor-portal",
  "version": "1.0.0",
  "private": true,
  "description": "Altsui Investor Portal - Multi-role SaaS platform",
  "scripts": {
    "dev": "pnpm --filter './apps/*' dev",
    "dev:api": "pnpm --filter './apps/api' dev",
    "dev:web": "pnpm --filter './apps/web' dev",
    "build": "pnpm --filter './apps/*' build",
    "start": "cd apps/api && pnpm start",
    "lint": "pnpm --filter './apps/*' lint",
    "type-check": "pnpm --filter './packages/shared' type-check && pnpm --filter './apps/*' type-check",
    "test": "pnpm -r --filter @altsui/shared --filter @altsui/api test",
    "test:api": "pnpm -r --filter @altsui/api test",
    "test:shared": "pnpm -r --filter @altsui/shared test",
    "test:watch": "pnpm --filter './apps/api' test:watch"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "adm-zip": "^0.5.16",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
